# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                       Application.index
GET     /form                                   Application.form
POST    /notifier_api/v2/notices                Api.notices

# Ignore favicon requests
GET     /favicon.ico                            404

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public
GET     /assets/                                staticDir:public

GET     /notices/resolved/{resolved}            Notices.setResolved

GET     /notices/{id}/show                      Notices.show()
GET     /projects/{id}/show                     Projects.show()
GET     /accounts/{id}/show                     Accounts.show()



GET     /feeds/index.xml                        Feeds.index(format:'xml')
GET     /feeds/show/{apiKey}.xml                Feeds.show(format:'xml')
GET     /graphs/notices.svg                     Graphs.notices(format:'svg')

# TODO add correct REST Method here
*       /projects/{id}/key/remove               Projects.remApiKey
*       /projects/{id}/key/add                  Projects.addApiKey

GET     /project/{projectId}/errors/index       BacktraceErrors.projectIndex
GET     /errors/show/{id}.xml                   BacktraceErrors.show(format:'xml')
*       /errors/{action}                        BacktraceErrors.{action}

# Catch all
*       /{controller}/{action}                  {controller}.{action}
